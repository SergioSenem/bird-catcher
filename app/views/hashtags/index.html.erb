<% if @user.hashtags.count > 0 %>

<% @user.hashtags.each do |hashtag| %>

<div class="row">
	<div class="col-sm"><%= hashtag.value %></div>
	<div class="col-sm">
		<%= link_to 'Exibir tweets', user_hashtag_path(@user, hashtag), class: "btn" %>
	</div>
	<div class="col-sm">
		<div class="float-right">
			<%= button_to 'Remover Hashtag', [@user, hashtag], 
				method: :delete,
				data: { confirm: 'Are you sure?' },
				class: "btn btn-danger" %>
		</div>
	</div>
</div>

<hr>

<% end %>


