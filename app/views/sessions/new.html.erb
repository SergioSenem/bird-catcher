<h1>Login</h1>

<% if @login_error %>

	<p>Login ou senha incorretos!</p>

<% end %>

<% unless @user.nil? %>
	<p><%= users_path %></p>
<% end %>

<%= form_tag '/login' do %>
	<p>
		<%= label_tag :username %>
		<%= text_field_tag :username %>
	</p>

	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>

	<p>
		<%= submit_tag "Login" %>
	</p>
<% end %>