<% if @password_error %>
	<div class="alert alert-danger" role="alert" id="alert">
		Senhas não coincidem!
	</div>
<% end %>

<%= form_with(model: @user, url: @url, method: @method) do |form| %>

	<div class="form-group">
		<%= form.label :usuario %>
		<%= form.text_field :username, placeholder: "Digite o nome de usuário", class: "form-control" %>
	</div>

	<div class="form-group">
		<%= form.label :senha %>
		<%= form.password_field :password, placeholder: "Digite a senha", class: "form-control" %>
	</div>

	<div class="form-group">
		<%= form.label :confirmar %>
		<%= form.password_field :password_repeat, placeholder: "Confirme a senha", class: "form-control" %>
	</div>

	<div class="form-group">
		<%= form.submit "Confirmar", class: "btn btn-primary col-sm-12" %>
	</div>
<% end %>